{% extends '@ibexadesign/emails/user/layout.html.twig' %}

{% trans_default_domain "ngsite_mail" %}

{% block title %}
    <a href="{{ ibexa_url(ibexa.rootLocation) }}">{{ ngsite.siteInfoContent.fields.site_name.value.text|trim }}</a>
{% endblock %}

{% block content %}
    {{ "ngsite.user.account_information"|trans }}

    <br>

    {{ "ngsite.user.username"|trans }}: {{ user.login }}

    <br>

    {{ "ngsite.user.email"|trans }}: {{ user.email }}

    <br><br>

    {{ "ngsite.user.activate.text"|trans }} <a href="{{ url('ngsite_user_activate', {hash: hash}) }}">{{ url('ngsite_user_activate', {hash: hash}) }}</a>
{% endblock %}
